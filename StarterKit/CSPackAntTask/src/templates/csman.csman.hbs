}}<PackageManifest version="2">
    <Encryption keytype="1"/>
    <Contents hashtype="1">{{#filesWithHash}}
        <Item name="{{name}}" hash="{{hashValue}}" uri="/{{name}}" />{{/filesWithHash}}
    </Contents>{{#unless root}}{{#if roles}}
    <SystemConfigurationSettings>{{#roles}}
        <Setting key="{{name}}Instances"/>{{/roles}}
    </SystemConfigurationSettings>
    <ApplicationConfigurationSettings>{{#roles}}{{#settings}}
        <Setting key="{{../name}}:{{name}}"/>{{/settings}}{{/roles}}
    </ApplicationConfigurationSettings>{{/if}}{{/unless}}{{#if root}}
    <NamedStreams>{{#roles}}
        <Stream name="RequiredFeatures/{{name}}/1.0" />
        <Stream name="SupportedOSes/{{name}}/1.0" />
        <Stream name="SupportData/{{name}}/1.0" />{{/roles}}
    </NamedStreams>{{else}}
    <NamedStreams/>{{/if}}
</PackageManifest>
